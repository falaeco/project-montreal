<% include partials/header %>
<div class="container">
  <h1> Submit a proposition </h1>
  <br>
  <form action="/project-list" method="post">
    <div class="form-row justify-content-center">
        <div class="form-check col-3">
            <label for="Amélioration" class="check-label"><input type="radio" name="type" class="form-check-input">Amélioration</label> 
        </div>
        <div class="form-check col-3">
            <label for="Proposition" class="check-label"><input type="radio" name="type" class="form-check-input">Proposition</label>  
        </div>
    </div>
    <div class="form-group">
      <label for="title">Titre/Sujet</label>
      <input type="text" name="title" class="form-control" id="inputTitle" placeholder="Titre">
    </div>
    <div class="form-row">
        <div class="form-group col-md-5">
            <label for="Auteur">Auteur</label>
            <input type="text" name="author" class="form-control" id="inputAuthor" placeholder="Prénom et nom">
        </div>
        <div class="form-group col-md-7">
            <label for="inputEmail">Email</label>
            <input type="email" name="email" class="form-control" id="inputEmail" placeholder="email" readonly>
        </div>
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" name="description" placeholder="add a description" rows="4"></textarea>
    </div>
    <div class="form-group">
        <label for="image URL">Image URL</label>
        <input type="text" name="image" class="form-control" id="imageURLinput" placeholder="image=#">
    </div>
    <div class="form-group">
        <label for="image">Ajouter une image</label>
        <input type="file" name="imagefile" class="form-control-file" id="imageInput" accept=".jpg, .jpeg, .png">
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-primary btn-lg btn-block">LET ME ADD</button>
    </div>
  </form>
  <a href="/">Go back</a>
</div>
<% include partials/footer %>
